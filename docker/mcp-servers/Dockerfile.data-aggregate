# MCP Data Aggregate Server
# Data aggregation and statistics

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastmcp>=2.0.0 \
    pydantic>=2.0.0

# Copy server files
COPY servers/timing.py /app/
COPY servers/data_aggregate_server.py /app/

# Environment variables for HTTP transport
ENV MCP_TRANSPORT=http
ENV MCP_HOST=0.0.0.0
ENV MCP_PORT=8080

EXPOSE 8080

CMD ["python", "data_aggregate_server.py"]
