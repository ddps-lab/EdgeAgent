# MCP Fetch Server
# Fetches web pages and converts HTML to markdown

FROM edgeagent-mcp-base:latest

# Install additional dependencies (not in base)
RUN pip install --no-cache-dir \
    markdownify>=0.11.0 \
    beautifulsoup4>=4.12.0

# Copy server file
COPY servers/fetch_server.py /app/

CMD ["python", "fetch_server.py"]
