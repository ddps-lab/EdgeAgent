# MCP Summarize Server
# Text summarization using LLM

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastmcp>=2.0.0 \
    openai>=1.0.0 \
    pydantic>=2.0.0

# Copy server file
COPY servers/summarize_server.py /app/

# Environment variables for HTTP transport
ENV MCP_TRANSPORT=http
ENV MCP_HOST=0.0.0.0
ENV MCP_PORT=8080

# OPENAI_API_KEY must be provided at runtime
EXPOSE 8080

CMD ["python", "summarize_server.py"]
