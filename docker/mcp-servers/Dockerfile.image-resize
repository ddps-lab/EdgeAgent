# MCP Image Resize Server
# Image resizing and manipulation

FROM edgeagent-mcp-base:latest

# Install additional dependencies (not in base)
RUN pip install --no-cache-dir \
    Pillow>=10.0.0 \
    imagehash>=4.3.0

# Copy server file
COPY servers/image_resize_server.py /app/

CMD ["python", "image_resize_server.py"]
