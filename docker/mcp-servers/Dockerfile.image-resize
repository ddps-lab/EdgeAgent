# MCP Image Resize Server
# Image resizing and manipulation

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastmcp>=2.0.0 \
    Pillow>=10.0.0 \
    pydantic>=2.0.0 \
    imagehash>=4.3.0

# Copy server file
COPY servers/image_resize_server.py /app/

# Environment variables for HTTP transport
ENV MCP_TRANSPORT=http
ENV MCP_HOST=0.0.0.0
ENV MCP_PORT=8080

EXPOSE 8080

CMD ["python", "image_resize_server.py"]
