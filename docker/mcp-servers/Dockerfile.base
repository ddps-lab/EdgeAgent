# EdgeAgent MCP Server Base Image
# Python 3.11 + FastMCP + common dependencies

FROM python:3.11-slim

WORKDIR /app

# Install common dependencies for MCP servers
RUN pip install --no-cache-dir \
    fastmcp>=2.0.0 \
    httpx>=0.27.0 \
    pydantic>=2.0.0

# Environment variables for HTTP transport
ENV MCP_TRANSPORT=http
ENV MCP_HOST=0.0.0.0
ENV MCP_PORT=8080

EXPOSE 8080
