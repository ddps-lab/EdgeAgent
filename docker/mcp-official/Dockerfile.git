# MCP Git Server with mcp-proxy (stateless HTTP mode) - PATCHED with ToolTimer
#
# Uses patched git_server_patched.py with timing instrumentation
#
# Usage:
#   docker build -f Dockerfile.git -t edgeagent-mcp-git .
#   docker run -p 8080:8080 -v /my/repo:/repo edgeagent-mcp-git

FROM python:3.11-slim

WORKDIR /app

# Install git and Node.js for mcp-proxy
RUN apt-get update && apt-get install -y git curl && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install mcp-proxy (Node) and git dependencies (Python)
RUN npm install -g mcp-proxy && \
    pip install --no-cache-dir mcp gitpython pydantic

# Copy patched server and timing module
COPY servers/timing.py /app/
COPY servers/git_server_patched.py /app/

# Environment variables
ENV MCP_PORT=8080

# Expose HTTP port
EXPOSE 8080

# Run mcp-proxy with patched server
CMD ["sh", "-c", "mcp-proxy --port ${MCP_PORT} --stateless python /app/git_server_patched.py"]
